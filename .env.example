# PDF Summarizer Agent - Environment Configuration

# AI Provider
AI_PROVIDER=openai
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# GitHub
GITHUB_TOKEN=your_github_token_here
GITHUB_REPO=lucaiolienrico/pdf-summarizer-agent

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/pdf_summarizer.log

# PDF Processing
MAX_PDF_SIZE_MB=50
TEMP_DIR=./temp
OUTPUT_DIR=./summaries

# Notifications
NOTIFICATION_EMAIL=your_email@example.com
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_PASSWORD=your_app_password

# Debug Mode
DEBUG=false
